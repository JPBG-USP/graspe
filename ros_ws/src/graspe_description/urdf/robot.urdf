<?xml version="1.0"?>
<robot name="graspe">

    <!-- Materiais -->
    <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
    </material>

    <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
    </material>

    <!-- Link da base -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.2" length="0.1"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.2" length="0.1"/>
            </geometry>
        </collision>
    </link>

    <!-- Link do braço rotativo -->
    <link name="rotating_arm">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.4"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.4"/>
            </geometry>
        </collision>
    </link>

    <!-- Link do braço linear -->
    <link name="linear_arm">
        <visual>
            <origin xyz="0 0 0.4" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.4"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.4" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.4"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint entre base e braço rotativo -->
    <joint name="base_to_rotating_arm" type="revolute">
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="rotating_arm"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
    </joint>

    <!-- Joint entre braço rotativo e braço linear -->
    <joint name="rotating_arm_to_linear_arm" type="prismatic">
        <origin xyz="0 0 0.3" rpy="0 0 0"/>
        <parent link="rotating_arm"/>
        <child link="linear_arm"/>
        <axis xyz="0 0 1"/>
        <limit lower="0.0" upper="0.3" effort="10" velocity="0.5"/>
    </joint>

    <!-- Link do atuador final -->
    <link name="end_effector">
        <visual>
            <origin xyz="0 0 0.8" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.8" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint entre braço linear e atuador final -->
    <joint name="linear_arm_to_end_effector" type="revolute">
        <origin xyz="0 0 0.8" rpy="0 0 0"/>
        <parent link="linear_arm"/>
        <child link="end_effector"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
    </joint>

</robot>
